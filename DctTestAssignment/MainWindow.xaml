<Window x:Class="DctTestAssignment.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DctTestAssignment"
        mc:Ignorable="d"
        Title="TestAssingnment" Height="450" Width="800">
    <DockPanel>
        <StackPanel Name="NavigateButtons" Orientation="Horizontal" DockPanel.Dock="Top" Background="LightGray">
            <Button Content="Currencies" Width="100" Click="NavigateCurrencies"/>
            <Button Content="Convert" Width="100" Click="NavigateConvert"/>
        </StackPanel>
        <Frame Name="MainFrame" NavigationUIVisibility="Hidden" />
    </DockPanel>
</Window>
